<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Submitted Data</title>
    <link rel="stylesheet" href="/styles1.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Geologica:wght@600&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,700&display=swap" rel="stylesheet">
</head>
<body>
    <h1 class="heading">Submitted Data</h1>
    <div class="container">
        <!-- Add a search input field -->
        <div class="search-container">
            <div class="search">
                <img src="loupe.png" alt="search">
                <input type="text" id="searchInput" onkeyup="searchTable()" placeholder="Search by name or email">
            </div>
        </div>
        <div class="sort">
            <img id="sortImage" src="sort.png" alt="sort">
        </div>
    </div>
    <div class="card-container">   
        <% users.forEach((user, index) => { %>
            <div class="card">
                    <div data-search="<%= user.name %>"></div>
                    <div data-search="<%= user.email %>"></div>
                    <img src="cover-photo.jpg" alt="Cover Photo">
                    <h2><%= user.name %></h2>
                    <p><strong>Email:</strong> <%= user.email %></p>
                    <p><strong>Date of Birth:</strong> <%= user.dob.toLocaleDateString() %></p>
                    <p><strong>Address:</strong> <%= user.address %></p>
                    <p><strong>Phone Number:</strong> <%= user.phone %></p>
                    <p><strong>Gender:</strong> <%= user.gender %></p>
            </div>
        <% }); %>
    </div>
    <div id="searchResultMessage" class="message-container">Result not found</div> 
<script src="/script.js"></script>
</body>
</html>
